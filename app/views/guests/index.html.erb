<h1>My Guests</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
  <% for guest in @guests %>
    <tr>
      <td><%= link_to guest.name, guest %></td>
      <td><%= guest.email %></td>
      <td><%= guest.notes %></td>
      <td><%= link_to "Edit", edit_guest_path(guest) %></td>
      <td><%= link_to "Destroy", guest, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add A New Guest", new_guest_path %></p>
