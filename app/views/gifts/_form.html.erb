<%= form_for @gift do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :invitation_id %><br />
    <%= f.collection_select :invitation_id, Invitation.all, :id, :invite_code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :note_sent_on %><br />
    <%= f.date_select :note_sent_on, :order => [:month, :day, :year] %>
  </p>
  <p><%= f.submit %></p>
<% end %>
