<!DOCTYPE html>
<html>
  <head>
    <title>Rage Manager :: <%= controller.controller_name.capitalize %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>           
   <body> 
   <div id="container">      
      <div id="banner">
        <%= link_to(image_tag("rage.jpg", :size => "450x100", :border => 0), :root) %>
      </div>
      <!-- NAVIGATION BAR --> 
     	  <ul id="nav">  
       	  <li><%= link_to 'Parties', parties_path %></li>  
  			  <li><%= link_to 'Guests', guests_path %></li>
          <li><%= link_to 'Locations', locations_path %></li>
          <li><%= link_to 'Invitations', invitations_path %></li>
          <li><%= link_to 'Gifts', gifts_path %></li> 
          <li><%= link_to 'My Account', :edit_current_host %></li>
  			  <% if logged_in? %>
  			    <li><%= link_to 'Logout', logout_path %></li>
  			  <% else %>
  			   <li><%= link_to 'Login', login_path %></li>
  			  <% end %>
  		  </ul>
      
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
      </br>
    <div id="footer">
    <%= link_to 'Contact Us', contact_path %> | <%= link_to 'About Us', about_path %> | <%= link_to 'Privacy Policy', privacy_path %>
    <br />
    Property of Dominic Cerminara, Webmaster 
  </div>
  </div>  
  </body>

</html>
