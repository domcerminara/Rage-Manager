<h1>My Invitations</h1>

<table>
  <tr>
    <th>Party</th>
    <th>Guest</th>
    <th>Expected Attendees</th>
    <th>Actual Attendees</th>
  </tr>
  <% for invitation in @invitations %>
    <tr>
      <td><%= link_to invitation.party.name, party_path(invitation.party) %></td>
      <td><%= link_to invitation.guest.name, guest_path(invitation.guest) %></td>
      <td><%= invitation.expected_attendees %></td>
      <td><%= invitation.actual_attendees %></td>
      <td><%= link_to "Show", invitation %></td>
      <td><%= link_to "Edit", edit_invitation_path(invitation) %></td>
      <td><%= link_to "Destroy", invitation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add A New Invitation", new_invitation_path %></p>
