<%= form_for @party do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.collection_select :location_id, Location.all, :id, :name %>
  </p>
  <p>
    <%= f.label :party_type_id %><br />
    <%= f.collection_select :party_type_id, PartyType.all, :id, :name %>
  </p>
  <p>
    <%= f.label :party_date %><br />
    <%= f.date_select :party_date, :order => [:month, :day, :year] %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.time_select :end_time %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :rsvp_date %><br />
    <%= f.date_select :rsvp_date, :order => [:month, :day, :year] %>
  </p>
  <p><%= f.submit %></p>
<% end %>
