<h1>My Locations</h1>

<table>
  <tr>
    <th>Host</th>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
  </tr>
  <% for location in @locations %>
    <tr>
      <td><%= location.host_id %></td>
      <td><%= location.name %></td>
      <td><%= location.street %></td>
      <td><%= location.city %></td>
      <td><%= location.state %></td>
      <td><%= location.zip %></td>
      <td><%= link_to "Show", location %></td>
      <td><%= link_to "Edit", edit_location_path(location) %></td>
      <td><%= link_to "Destroy", location, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add A New Location", new_location_path %></p>
